
@using System.Configuration;

@{
    ViewBag.Title = "פנקסים";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var domain = ConfigurationManager.AppSettings["Domain"];
}

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 title-section">
        <h2 class="main-page-title">@ViewBag.Title</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 buttons-section text-right">
        @Html.ActionLink("הוספת פנקס", "AddNotebook", null, new { @class = "btn btn-info" })
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header text-right">
                <i class="fa fa-table"></i>
                רשימת פנקסים
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="theader">
                            <tr class="tr-header">
                                <th class="th-header">מחיקה</th>
                                <th class="th-header">עריכה</th>
                                <th class="th-header">רחוב</th>
                                <th class="th-header">מספר פנקס</th>
                                <th class="th-header">מזהה ייחודי </th>
                            </tr>
                        </thead>
                        <tbody class="tbody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/Scripts/jquery.dataTables.min.js"></script>

    <script>
        $(function () {

            var text = "האם אתה בטוח שברצונך למחוק את הפריט ?";

            $("#dataTable").dataTable({
                "autoWidth": false,
                "bServerSide": true, //make server side processing to true
                "sAjaxSource": '@domain' + "api/Notebooks/GetData", //url of the Ajax source,i.e. web api method
                "sAjaxDataProp": "aaData", // data property of the returned ajax which contains table data
                "bProcessing": true,
                "bLengthChange": false,
                "order": [[3, 'asc']],
                "format": 'YYYY/MM/DD',
                "sPaginationType": "full_numbers",//pagination type
                "aoColumnDefs": [
                    { 'bSortable': false, "width": "10%", 'aTargets': [0] },
                    { 'bSortable': false, "width": "10%", 'aTargets': [1] },
                    { 'bSortable': true, "width": "60%", 'aTargets': [2] },
                    { 'bSortable': true, "width": "10%", 'aTargets': [3] },
                    { 'bSortable': true, "width": "10%", 'aTargets': [4] }
                ],
                "aoColumns": [
                    {
                        mData: '',
                        render: (data, type, row) => {
                            if (row.MetersReaders.length === 0) {
                                return `<a
                                href='../Admin/Notebooks/DeleteBoulder/${row.Id}'
                                title="מחיקה"
                                class="btn btn-sm btn-default"
                                onclick='return confirm("${text}")'>
                                <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
                            </a>`;
                            }
                            else {
                                return '';
                            }
                        }
                    },
                    {
                        mData: '',
                        render: (data, type, row) => {
                            return `<a
                                href='../Admin/Notebooks/EditNotebook/${row.Id}'
                                title="עריכה"
                                class="btn btn-sm btn-default">
                               <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
                              </a>`;
                        }
                    },
                    { "mData": "StreetName" },
                    { "mData": "Number" },
                    { "mData": "Id" }
                ],
                "language": {
                    "sSearch": "חפש",
                    "lengthMenu": "Display _MENU_ records per page",
                    "zeroRecords": "מצטערים אין תוצאות",
                    "info": "מציג עמוד _PAGE_ מתוך _PAGES_",
                    "infoEmpty": "No records available",
                    "infoFiltered": "(filtered from _MAX_ total records)",
                    "processing": "טוען",
                    "paginate": {
                        "previous": "הקודם",
                        "next": "הבא",
                        "last": "אחרון",
                        "first": "ראשון"
                    }
                }
            });

            $('div.dataTables_filter input').addClass('form-control');
        });
    </script>

}
